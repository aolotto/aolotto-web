---
import Layout from '../../layouts/Base.astro';
import Header from "@/components/Header.astro"
import Foot from "@/components/Foot.astro"
import { Icon } from 'astro-icon/components'
import {  parseLocaleByPath } from "@/i18n/utils";
const {lang} = parseLocaleByPath(Astro.url.pathname)
---

<Layout title="Welcome to Astro.">
	<main class="w-10/12 max-w-[1440px]">
		<Header/>
		<section class="pb-32 pt-32 lg:pt-16 flex flex-col justify-center items-center lg:items-start">
			<div class="text-[4em]  lg:text-[5.5em] leading-[1.2] font-display text-center lg:text-left">首款运行在 Arweave AO上的去中心化<span class="bg-base-content rounded-full inline-flex px-[0.4em] text-base-200 scale-90">彩票</span>协议，简单，透明且开放。</div>
			<div class="mt-8 flex gap-4 items-center flex-col lg:flex-row">
				<a href=`https://docs.aolotto.com/${lang}` class="btn-primary">从这里开始 <Icon name="carbon:arrow-right" /></a>
				<span class="text-base-content/50">当前运行在测试网.</span>
			</div>
		</section>
		<Foot/>
	</main>
</Layout>


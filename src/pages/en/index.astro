---
import Layout from '../../layouts/Base.astro';
import LanguagePicker from "@/components/LanguagePicker.astro";
import Logo from "@/components/Logo.astro"
import Foot from "@/components/Foot.astro"
import { Icon } from 'astro-icon/components'
import {  parseLocaleByPath } from "@/i18n/utils";
const {lang} = parseLocaleByPath(Astro.url.pathname)
---

<Layout title="Welcome to Astro.">
	<main class="w-10/12 max-w-[1440px]">
		<header class='flex justify-between items-center'>
			<Logo/>
			<LanguagePicker/>
		</header>
		<section class="pb-32 pt-16">
			<div class="text-[5.5em] leading-[1.2] font-display">The first decentralized <span class="bg-base-content rounded-full inline-flex px-[0.4em] text-base-200 scale-90">lottery</span> protocol built on Arweave AO, Simple, Transparent and Open.</div>
			<div class="mt-8 flex gap-4 items-center">
				<a href=`https://docs.aolotto.com/${lang}` class="btn-primary">Get Started <Icon name="carbon:arrow-right" /></a>
				<span class="text-base-content/50">Running on testnet.</span>
			</div>
		</section>
		<Foot/>
	</main>
</Layout>

